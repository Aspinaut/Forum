{% extends 'base.html.twig' %}

{% block body %}

  <style>
      .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
      .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  </style>

  <div class="example-wrapper">
    <h1>Log in</h1>

    <form action="{{ path('login') }}" method="post">
      <div class="form-group">
        <input placeholder="Your email address" required name="_username" type="text" class="form-control">
      </div>
      <div class="form-group">
        <input placeholder="Your password" required name="_password" type="password" class="form-control">
      </div>
      <div>
        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
        <label for="remember_me">Keep me logged in</label>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Log in</button>
        <a href="{{ path('mailer') }}">Forgot your password ?</a>
      </div>
    </form>
  </div>

{% endblock %}
