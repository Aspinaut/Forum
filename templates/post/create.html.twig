{% extends 'base.html.twig' %}

{% block body %}
  <style>
      .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
      .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
  </style>

  <div class="example-wrapper">
    <h1>Creating post</h1>

    {% form_theme formPost 'bootstrap_4_layout.html.twig' %}

    {{ form_start(formPost) }}

    {{ form_row(formPost.title, {'attr': {'Placeholder': "Title"}}) }}
    {{ form_row(formPost.content, {'attr': {'Placeholder': "Content"}}) }}
    {{ form_row(formPost.author, {'attr': {'Placeholder': "Author"}}) }}
    <select name="postCategory" id="postCategory">
      {% for category in categories %}
          {% for subcategory in category.subcategories %}
            <option value="{{ subcategory.id }}">{{ subcategory.title }}</option>
          {% endfor %}
      {% endfor %}
    </select>
    <button type="submit" class="btn btn-success">Add</button>

    {{ form_end(formPost) }}
  </div>

{% endblock %}
